let userName = 'Seth';
//tenary expression
userName ? console.log ('Hello, Seth!') : console.log ('Hello!');
// A question the user wants to ask
let userQuestions = 'what do you want?';
console.log(`The user asked:${userQuestions}`);
//Create another variable
const randomNumber = Math.floor(Math.random() * 8);
let eightBall = '';

switch (eightBall){
  case 0:
  eightBall = 'It is certain';
  break;
  case 1:
  eightBall = 'It is decidedly so';
  break;
  case 2:
  eightBall = 'Reply hazy try again';
  break;
  case 3:
  eightBall = 'Cannot predict now';
  break;
  case 4:
  eightBall = 'Do not count on it';
  break;
  case 5:
  eightBall = 'My sources say no';
  break;
  case 6:
  eightBall = 'Outlook not so good';
  break;
  case 7:
  eightBall = 'Signs point to yes';
  break;
  default:
  console.log(`The eight ball answered: ${eightBall}`);
}


if (eightBall = case 0){
   console.log ('It is certain');
 } else if (eightBall = case 1){
   console.log ('It is decidedly so');
 } else if (eightBall = case 2){
   console.log ('Reply hazy try again');
 } else if (eightBall = case 3){
   console.log ('Cannot predict now');
 } else if (eightBall = case 4){
   console.log ('Do not count on it');
 } else if (eightBall = case 5){
   console.log ('My sources say no');
 } else if (eightBall = case 6){
   console.log ('Outlook not so good');
 } else {
   console.log ('Signs point to yes');
 }
